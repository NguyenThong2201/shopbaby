<script type="text/javascript">
    jQuery(document).ready(function ($) {
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = $('<img style="width: 100%">'); //Equivalent: $(document.createElement('img'))
                    img.attr('src', e.target.result);
                    var div = '<div class="col-sm-4 item-image" >' + img.prop('outerHTML') + '<button style="position: absolute;background: #fa6f57;border: none;right: 15px;top: 0px;color: white;">Ã—</button></div>';
                    //console.log(div);
                    $('#list-image').append(div);
                    $(".item-image button").click(function () {
                        $(this).parent().remove();
                    })
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            readURL(this);
        });
    });
</script>